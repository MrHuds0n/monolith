@import url('https://fonts.googleapis.com/css?family=Roboto');

main-color = #8AAAEB

*, *:before, *:after
  margin 0
  padding 0
  box-sizing border-box

html
  font-size 8pt

body
  min-height 100vh
  position relative
  padding 2rem

@media (min-width 1000px)
  .container
    display flex
    flex-direction column
    justify-content center
    align-items center

.button-primary
  background main-color !important
  border-color main-color !important

.container
  max-width 960px
  margin auto

  // display flex
  // flex-direction column
  // align-items center

.players, .rounds
  overflow auto

.tracking
  width 100%
  display flex
  padding-bottom 4rem

  select
    margin-left 1rem
    flex 4

  button
    flex 1

table
  padding .5rem
  max-width 100%
  font-size 1.2rem

  td
    padding .5rem 2rem
    font-family "Roboto"

    i
      padding-right 1rem
a
  color rgba(main-color, .7)

  &:hover
    color main-color

footer
  font-family "Roboto"
  border-top 2px #ddd dashed
  width 100%
  padding .5rem
  text-align center

  display flex
  flex-direction column
  align-items center
  justify-content center

  position relative
  bottom 0
